{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "src/**/*.graphql",
    "src/db/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}